{
    "views": [
        {
            "name": "main_orbital",
            "viewport": [
                0,
                0,
                1,
                1
            ],
            "clearBackground": true,
            "backgroundColor": [
                0,
                0,
                0,
                255
            ]
        },
        {
            "name": "rear_view",
            "viewport": [
                0.8,
                0.8,
                1,
                1
            ],
            "clearBackground": true,
            "backgroundColor": [
                0,
                0,
                0,
                180
            ]
        }
    ],
    "postProcess": {
        "name": "泛光",
        "rtPool": [
            "inScreen",
            "RTBright",
            "RTblur1",
            "RTblur2",
            "outScreen"
        ],
        "hint": "postProcessGraph务必按照拓扑序！",
        "postProcessGraph": [
            {
                "name": "brightPass",
                "fs": "assets/shaders/postprocess/bright.fs",
                "inputs": [
                    [
                        "u_screen",
                        "inScreen"
                    ]
                ],
                "output": "RTBright",
                "uniforms": {
                    "u_threshold": 0.5
                }
            },
            {
                "name": "BlurPass1",
                "fs": "assets/shaders/postprocess/blur.fs",
                "inputs": [
                    [
                        "u_screen",
                        "RTBright"
                    ]
                ],
                "output": "RTblur1",
                "uniforms": {
                    "u_radius": 20.0,
                    "u_direction": [
                        1.0,
                        1.0
                    ]
                }
            },
            {
                "name": "BlurPass1",
                "fs": "assets/shaders/postprocess/blur.fs",
                "inputs": [
                    [
                        "u_screen",
                        "RTblur1"
                    ]
                ],
                "output": "RTblur2",
                "uniforms": {
                    "u_radius": 20.0,
                    "u_direction": [
                        1.0,
                        -1.0
                    ]
                }
            },
            {
                "name": "combinePass",
                "fs": "assets/shaders/postprocess/combine.fs",
                "inputs": [
                    [
                        "u_brightTex",
                        "RTblur2"
                    ],
                    [
                        "u_baseTex",
                        "inScreen"
                    ]
                ],
                "output": "outScreen",
                "uniforms": {
                    "u_bloomIntensity": 2.0
                }
            }
        ]
    }
}